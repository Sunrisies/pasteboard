{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "autostart:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "clipboard-manager:allow-clear",
    "clipboard-manager:allow-read-image",
    "clipboard:allow-read-image-base64",
    "clipboard:read-all",
    "global-shortcut:default",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "upload:default",
    "fs:default",
    "fs:allow-config-read-recursive",
    "fs:allow-config-write-recursive",
    "fs:allow-config-read",
    "fs:allow-config-write",
    "fs:allow-config-meta-recursive",
    "fs:allow-config-meta",
    "fs:scope-config-recursive",
    "fs:scope-config",
    "fs:scope-config-index",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$CONFIG"
        },
        {
          "path": "$CONFIG/**/*"
        }
      ]
    }
  ]
}